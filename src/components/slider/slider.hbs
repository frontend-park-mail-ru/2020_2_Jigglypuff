<div class="slider__wrapper">
    <div class="slider__item">
        <div style="
                background-image: radial-gradient(circle, rgba(243,239,245,0) 0%, var(--main-background-color) 100%),
                url({{ pathToSliderAvatar }});
                background-size: 100%;
                height: 100%;">
            <div class="item__layout">
                <div class="layout__main">
                    <div class="layout__main_roles">
                        <div>
                            <p>
                                {{#each actorList }}
                                    {{ this }}
                                {{/each}}
                            </p>
                        </div>
                    </div>
                    <p class="layout__main_headline">{{ name }}</p>
                    <div class="main__button">{{{ WatchButton }}}</div>
                </div>
            </div>
        </div>
    </div>
    <!--    <a class="slider__control slider__control_left" href="#" role="button"></a>-->
    <!--    <a class="slider__control slider__control_right slider__control_show" href="#" role="button"></a>-->
</div>
