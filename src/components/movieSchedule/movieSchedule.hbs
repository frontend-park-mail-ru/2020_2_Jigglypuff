{{#if sessions}}
    <hr class="header__line movie-list__line">

    <div class="movie-list__header" style="margin-top: 30px">Расписание</div>

    <div class="movie-schedule-content">
        <div class="movie-schedule__date_title">
            {{ date }}
        </div>
        <div class="movie-schedule__schedule-block">
            <div class="schedule-block__formats">
                <div class="movie-schedule__format">
                    <span style="margin: 0 auto">2D</span>
                </div>
                <div class="schedule-block__schedule">
                    {{#each ScheduleButtons }}
                        {{{ this }}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <hr class="movie-card__description_schedule-line">
{{/if}}
