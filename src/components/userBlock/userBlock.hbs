{{#if isAuthorized }}
    <a href="{{ ProfilePath }}" class="userblock__item" data-event="{{ ProfileEvent }}" href="#" data-path="{{ ProfilePath }}">{{ name }} {{ surname }}</a>
    <div class="userblock__item">
        <a href="{{ ProfilePath }}" data-event="{{ ProfileEvent }}" data-path="{{ ProfilePath }}"><img class="{{#if isPremium }} userblock__avatar_premium {{else}} userblock__avatar_regular {{/if}}" src="{{ pathToAvatar }}" alt=""/></a>
    </div>
{{else}}
    <div class="userblock__item">
        {{{ StandardButton }}}
    </div>
    <a class="userblock__item" data-event="{{ RegisterEvent }}" href="{{ RegisterPath }}" data-path="{{ RegisterPath }}">Регистрация</a>
{{/if}}
