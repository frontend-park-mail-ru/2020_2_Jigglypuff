<fest:template xmlns:fest="http://fest.mail.ru" context_name="profile">
    <style>
        <fest:insert src="./EditProfile.css"/>
    </style>
    <div class="d-flex w-1170 h-100 align-center">
        <div class="avatar-card">
            <img class="avatar-poster" alt="">
                <fest:attributes>
                    <fest:attribute name="src">
                    </fest:attribute>
                </fest:attributes>
            </img>
        </div>
        <div class="ml-4">
            <form method="POST" class="wrapper__form" id="profileSettingsForm">
                <h2 class="align-center">Редактирование</h2>
                <main>
                    <input name="name" type="text" placeholder="Имя"/>
                    <input name="surname" type="text" placeholder="Фамилия"/>
                    <input type="file" name="avatar" src="https://mdn.mozillademos.org/files/2917/fxlogo.png" placeholder="Аватар"/>
                    <button type="submit">Принять</button>
                </main>
            </form>
        </div>
    </div>
</fest:template>