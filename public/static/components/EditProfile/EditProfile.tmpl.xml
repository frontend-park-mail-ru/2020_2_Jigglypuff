<fest:template xmlns:fest="http://fest.mail.ru" context_name="profile">
    <div class="d-flex w-1170 h-100 align-center">
        <div class="movie-card">
            <img class="movie-poster" alt="">
                <fest:attributes>
                    <fest:attribute name="src">
                        <fest:value>profile.poster</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </img>
        </div>
        <div class="description ml-4">
            <form method="POST" class="wrapper__form">
                <h2 align="center">Редактирование</h2>
                <main>
                    <input type="text" placeholder="Имя"/>
                    <input type="text" placeholder="Фамилия"/>
                    <input type="email" placeholder="Логин"/>
                    <input type="password" placeholder="Пароль"/>
                    <input type="password" placeholder="Повторите пароль"/>
                    <input type="image" placeholder="Аватар"/>
                    <button type="submit">Принять</button>
                </main>
            </form>
        </div>
    </div>
</fest:template>