<fest:template xmlns:fest="http://fest.mail.ru" context_name="movie">
    <style>
        <fest:insert src="./MovieCard.css"/>
    </style>
    <div class="movie-card">
        <a>
            <fest:attributes>
                <fest:attribute name="href">
                    <fest:value>movie.href</fest:value>
                </fest:attribute>
            </fest:attributes>

            <img class="movie-poster" alt="">
                <fest:attributes>
                    <fest:attribute name="src">
                        <fest:value>movie.poster</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </img>
        </a>
        <p>
            <fest:value>movie.name</fest:value>
        </p>
    </div>
</fest:template>