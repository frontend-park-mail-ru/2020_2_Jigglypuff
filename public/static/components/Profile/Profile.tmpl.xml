<fest:template xmlns:fest="http://fest.mail.ru" context_name="profile">
    <div class="d-flex w-1170 align-center">
        <div class="movie-card border-margin">
            <img class="movie-poster" alt="">
                <fest:attributes>
                    <fest:attribute name="src">
                        <fest:value>profile.avatar</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </img>
        </div>
        <div>
            <div class="description border border-padding border-margin">
                <div class="d-flex flex-column border-padding">
                    <h2 align="left">
                        Фамилия:
                    </h2>
                    <h2 align="left">
                        Имя:
                    </h2>
                    <h2 align="left">
                        Логин:
                    </h2>
                </div>
                <div class="d-flex flex-column border-padding">
                    <h2 align="left">
                        <fest:value>profile.name</fest:value>
                    </h2>
                    <h2 align="left">
                        <fest:value>profile.surname</fest:value>
                    </h2>
                    <h2 align="left">
                        <fest:value>profile.login</fest:value>
                    </h2>
                </div>
                <button>Редактировать</button>
            </div>
        </div>
    </div>
</fest:template>